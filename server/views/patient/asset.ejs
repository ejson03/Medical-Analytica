<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/headnew.ejs') %>
</head>
<body class="">
  <div class="wrapper ">
    <%- include('../partials/sidebar.ejs') %>
    <div class="main-panel">
      <%- include('../partials/topbar.ejs') %>
      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-primary">
                  <h4 class="card-title">Records History</h4>
                  <p class="card-category"> <i class="material-icons">access_time</i> updated  <script>
                    document.write(new Date())
                  </script> ago </p>
                </div>
                <br>
                <div class="card-body table-responsive">
                  <table class="table table-hover">
                    <tbody>
                      <% for (const record of records){ %>
                      <tr>
                          <% if(record.operation != "TRANSFER") { %>
                          <td><label class="text-warning "> <%= record.operation %> </label></td>
                          <td><button type="button" rel="tooltip" title=" Access Granted" class="btn btn-danger btn-link btn-sm"><i class="material-icons-two-tone">add</i></button></td>
                          <td><label class="float-right text-warning "><%= record.date %></label></td>
                          <%} else { %> 
                          <td><label class="text-warning "> <%= record.operation %> </label><br>
                            <p>
                              <label class=""> Doctor </label>
                                <% for (const doctor of record.doctor){ %>
                                  <br><label>
                                  <%= doctor %> 
                                </label>
                                <% } %>
                            </p>
                            <td>
                              <% if(record.operation == "TRANSFER"){ %>
                                <button type="button" rel="tooltip" title=" Access Granted" class="btn btn-danger btn-link btn-sm"><i class="material-icons ">visibility</i></button></td>
                              <% } else{ %>  
                                <button type="button" rel="tooltip" title=" Access Revoked" class="btn btn-danger btn-link btn-sm"><i class="material-icons-two-tone">visibility_off</i></button></td>
                             <% } %>
                              
                            <td><label class="float-right text-warning"><%= record.date %></label></td>
                           <% } %>
                           <% } %>
                      </tr>
                    </tbody>
                  </table>
                </div>
          </div>
        </div>
      </div>
      <%- include('../partials/footer.ejs') %>
    </div>
  </div>
    
  <%- include('../partials/footerfiles.ejs') %>
</body>

</html>
            