<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/headnew.ejs') %>
</head>
<body class="">
  <div class="wrapper ">
    <%- include('../partials/sidebar.ejs') %>
    <div class="main-panel">
      <%- include('../partials/topbar.ejs') %>
      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-warning">
                  <h4 class="card-title ">Doctor List</h4>
                  <p class="card-category"> <i class="material-icons">access_time</i> updated  <script>
                    document.write(new Date())
                  </script> ago </p>
                </div>
                <div class="card-body table-responsive">
                  <div class="table-responsive">
                    <table class="table table-hover">
                      <thead class="text-primary">
                        <th>
                          ID
                        </th>
                        <th>
                          Name
                        </th>
                        <th>
                          Email
                        </th>
                        <th>
                          Specialization
                        </th>
                        <th>
                          Institute
                        </th>
                        <th>
                          Grant
                        </th>
                        <th>
                            Revoke
                        </th>
                        <th>
                            Prescription
                        </th>
                      </thead>
                      <tbody>
                        <% for (var doctor=0; doctor<doctors.length; doctor++){ %>
                        <tr>
                          <td>
                            <%= doctor %>
                          </td>
                            <td>
                                <%= doctors[doctor].name %>
                            </td>
                            <td>
                                <%= doctors[doctor].email %>
                            </td>
                            <td>
                                <%= doctors[doctor].specialization %>
                            </td>
                            <td>
                                <%= doctors[doctor].institute %>
                            </td>
                            <td >
                                <!-- <form action="/user/access" method="post">
                                    <button class="btn btn-primary " type="submit"  value="<%= doctor.username %>" name="value">
                                        <i class="material-icons">check</i>
                                    </button>
                                    
                                </form> -->
                                <form action="/user/access" method="post" onsubmit="openModal()" id="grantform">
                                  <button  type="submit" 
                                  data-toggle="modal" data-target="#grantlist" 
                                  rel="tooltip" title="Revoke Access" class="btn btn-danger btn-link btn-sm" 
                                  value="<%= doctor.username %>" name="value">
                                    <i class="material-icons">check</i>
                                  </button> 
                                </form>  
                                <!-- <button type="button" rel="tooltip" data-toggle="modal" data-target="#grantlist" title="Grant Access" class="btn btn-primary btn-link btn-sm">
                                  <i class="material-icons">check</i>
                                </button> -->
                                <!-- Modal -->
                               <div class="modal fade" id="grantlist" tabindex="-1" role="dialog" aria-labelledby="grantlistTitle" aria-hidden="true">
                                 <div class="modal-dialog modal-lg" role="document">
                                   <div class="modal-content">
                                     <div class="modal-header">
                                       <h5 class="modal-title" id="grantlistTitle">List of Documents</h5>
                                       <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                         <span aria-hidden="true">&times;</span>
                                       </button>
                                     </div>
                                     <form method="post" action="/user/check">
                                     <div class="modal-body">
                                         <% for (var d=0; d<records.length; d++){ %>
                                           <label class="bmd-label-floating col-md-4">
                                             <%= d %> <%= records[d].data.description %>
                                           </label>  
                                           <div class="form-check col-md-4 ml-auto">
                                            <label class="form-check-label">
                                              <input class="form-check-input " type="checkbox" name="<%= d %>" value="<%= records[d].data.description %>" />
                                              <span class="form-check-sign">
                                                <span class="check"></span>
                                              </span>
                                            </label>
                                          </div><br>
                                           <!-- <input class="col-md-4 ml-auto" type="checkbox" name="<%= d %>" value="<%= records[d].data.description %>" /><br> -->
                                           <% } %>
                                     <input type="hidden" value="<%= doctor.username %>" name="value" />
                                     </div>
                                     <div class="modal-footer">
                                       <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                       <button type="submit" value="submit" class="btn btn-primary">Save changes</button>
                                     </div>
                                   </form>
                                   </div>
                                 </div>
                               </div>
                            </td>
                            <td>
                                <form action="/user/revoke" method="post" onsubmit="openModal()" id="revokeform">
                                    <button  type="submit" 
                                    data-toggle="modal" data-target="#revokelist" 
                                    rel="tooltip" title="Revoke Access" class="btn btn-danger btn-link btn-sm" 
                                    value="<%= doctor.username %>" name="value">
                                      <i class="material-icons">close</i>
                                    </button> 
                                </form>  
                               <!-- <button type="button"data-toggle="modal" data-target="#revokelist" rel="tooltip" title="Revoke Access" class="btn btn-danger btn-link btn-sm">
                                <i class="material-icons">close</i>
                              </button>  -->
                                <!-- Modal -->
                               <div class="modal fade" id="revokelist" tabindex="-1" role="dialog" aria-labelledby="revokelistTitle" aria-hidden="true">
                                 <div class="modal-dialog modal-lg" role="document">
                                   <div class="modal-content">
                                     <div class="modal-header">
                                       <h5 class="modal-title" id="revokelistTitle">List of Documents</h5>
                                       <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                         <span aria-hidden="true">&times;</span>
                                       </button>
                                     </div>
                                     <form method="post" action="/user/uncheck">
                                     <div class="modal-body">
                                         <% for (var d=0; d<records.length; d++){ %>
                                           <label class="bmd-label-floating col-md-4">
                                             <%= d %> <%= records[d].data.description %>
                                           </label>  
                                           <div class="form-check col-md-4 ml-auto">
                                            <label class="form-check-label">
                                              <input class="form-check-input " type="checkbox" name="<%= d %>" value="<%= records[d].data.description %>" />
                                              <span class="form-check-sign">
                                                <span class="check"></span>
                                              </span>
                                            </label>
                                          </div><br>
                                           <% } %>
                                     <input type="hidden" value="<%= doctor.username %>" name="value" />
                                     </div>
                                     <div class="modal-footer">
                                       <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                       <button type="submit" value="submit" class="btn btn-primary">Save changes</button>
                                     </div>
                                   </form>
                                   </div>
                                 </div>
                               </div>
                            </td>
                            <td>
                                <form action="/user/prescription" method="post">
                                    <button type="submit" rel="tooltip" value="<%= doctor.username %>" name="value" title="Prescription" class="btn btn-primary btn-link btn-sm text-warning">
                                      <i class="material-icons">content_paste</i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%- include('../partials/footer.ejs') %>
    </div>
  </div>
   <script>
    $('#revokeform').on('submit', function(e){
      $('#revokelist').modal('show');
      e.preventDefault();
    }); 
    $('#grantform').on('submit', function(e){
      $('#grantlist').modal('show');
      e.preventDefault();
    }); 
   </script> 
  <%- include('../partials/footerfiles.ejs') %>
</body>

</html>